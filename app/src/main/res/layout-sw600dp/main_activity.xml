<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activities.MainActivity">

    <FrameLayout
            android:id="@+id/fl_main_overview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:context=".ui.view.activities.MainActivity"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/fl_main_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_weight="1"/>

    <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:context=".ui.view.activities.MainActivity"
            app:layout_constraintStart_toEndOf="@+id/fl_main_overview"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_weight="2"/>
</android.support.constraint.ConstraintLayout>